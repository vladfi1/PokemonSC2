include "types.a"
include "move.a"

public class PokemonSpecies {
    private static ArrayList<PokemonSpecies> species;

    static {
        species = new ArrayList<PokemonSpecies>(100);
        species.addLast(new PokemonSpecies("Charizard", 10, 10, 10, 10, 10, Type.FIRE, Type.FLYING, Move.flamethrower));
        species.addLast(new PokemonSpecies("Pikachu", 10, 10,10,10,10, Type.ELECTRIC, Move.generic));
        species.addLast(new PokemonSpecies("Chikorita", 25, 25, 25, 25, 25, Type.GRASS, Move.generic));
        species.addLast(new PokemonSpecies("Squirtle", 10, 10, 10, 10, 10, Type.WATER, Move.generic));
        species.addLast(new PokemonSpecies("Gengar", 10, 10, 10, 10, 10, Type.GHOST, Type.POISON, Move.shadowBall));
        
        species.addLast(new PokemonSpecies("Tower", 10, 10, 10, 10, 10, Type.FIRE, Type.STEEL, Move.flamethrower));
    }

    public static PokemonSpecies fromString(string name) {
        for (int i=0; i<species.size(); ++i) {
            PokemonSpecies s = species.getIndex(i);
            if (s.name == name) {
                return s;
            }
        }
        System.debug(name);
        return null;
    }

    // The name of this pokemon species.
    public string name;
    // The base stats for this species.
    public int hp, atk, def, satk, sdef;
    // A pokemon has 1 or 2 types.
    public Type type1, type2;
    
    // For now species have a unique move.
    public Move move;

    public PokemonSpecies(string name, int hp, int atk, int def, int satk, int sdef, Type type1, Type type2, Move move) {
        this.name = name;
        this.hp = hp;
        this.atk = atk;
        this.def = def;
        this.satk = satk;
        this.sdef = sdef;
        this.type1 = type1;
        this.type2 = type2;
        this.move = move;
    }
    
    public PokemonSpecies(string name, int hp, int atk, int def, int satk, int sdef, Type type, Move move) {
        this(name, hp, atk, def, satk, sdef, type, Type.NONE, move);
    }
}
