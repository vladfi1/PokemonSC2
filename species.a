include "types.a"

const int PHYSICAL = 0;
const int SPECIAL = 1;

const int NUM_POKEMON = 5;
PokemonSpecies[NUM_POKEMON] pBase;

static {
    pBase[0] = new PokemonSpecies("Charizard", 100, 100, 100, 100, 100, 100, PHYSICAL, "fighting", "none");
    pBase[1] = new PokemonSpecies("Pikachu", 100,100,100,100,100,100, SPECIAL, "ghost", "none");
    pBase[2] = new PokemonSpecies("Chikorita", 25, 25, 25, 25, 25, 25, SPECIAL, "grass", "None");
    pBase[3] = new PokemonSpecies("Squirtle", 10, 10, 10, 10, 10, 10, PHYSICAL, "fire", "fighting");
    pBase[4] = new PokemonSpecies("Tower", 10, 10, 10, 10, 10, 10, PHYSICAL, "fire", "fighting");
}

public PokemonSpecies speciesFromString(string a) {
    for (int i=0; i<NUM_POKEMON; ++i) {
        if (pBase[i].nam == a) {
            return pBase[i];
        }
    }
    return null;
}

public class PokemonSpecies {
    public int hp, basePower, atk, def, satk, sdef, moveType, type1, type2;
    public string nam;

    public PokemonSpecies(string nam, int hp, int basePower, int atk, int def, int satk, int sdef, int moveType, string type1, string type2) {
        this.nam = nam;
        this.hp = hp;
        this.basePower = basePower;
        this.atk = atk;
        this.def = def;
        this.satk = satk;
        this.sdef = sdef;
        this.moveType = moveType;
        this.type1 = typeNameToCode(type1);
        this.type2 = typeNameToCode(type2);
    }
}
